<UserControl x:Class="AtarisUI.TopBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AtarisUI"
             mc:Ignorable="d" 
             d:DesignHeight="24">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Grid>
                <Border x:Name="border" Height="24" VerticalAlignment="Center" RenderTransformOrigin="1,1" Background="Aqua" CornerRadius="3" Padding="8,1,8,1" Visibility="Visible">
                    <ContentPresenter Width="Auto" />
                </Border>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
