<UserControl x:Class="AtarisUI.Widgets.Shortcut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AtarisUI.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="18">
    <Grid Height="18" Width="18">
        <Image x:Name="image" Height="18" Width="18" Stretch="Fill">
            <Image.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Opacity="0.4"/>
            </Image.Effect>
        </Image>
    </Grid>
</UserControl>
