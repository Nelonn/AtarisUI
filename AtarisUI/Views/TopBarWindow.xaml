<Window x:Class="AtarisUI.TopBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtarisUI"
        mc:Ignorable="d"
        Title="TopBar"
        Height="24" Width="800"
        WindowStyle="None" Topmost="True"
        WindowStartupLocation="Manual"
        Left="0" Top="0"
        Background="#19FFFFFF"
        ResizeMode="NoResize"
        ShowInTaskbar="False" 
        AllowsTransparency="True"
        Loaded="Window_Loaded" UseLayoutRounding="True">
    <Grid>
        <Grid HorizontalAlignment="Left" Margin="10,0,0,0">
            <StackPanel x:Name="LeftPanel" Orientation="Horizontal" HorizontalAlignment="Left"/>
        </Grid>
        <Grid HorizontalAlignment="Right" Margin="0,0,10,0">
            <StackPanel x:Name="WidgetsPanel" Orientation="Horizontal" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
